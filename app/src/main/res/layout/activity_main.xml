<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:elevation="5dp"
        android:text="Asia sama"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:text="online"
        android:textColor="@color/white"
        android:textSize="14sp" />


    <ImageSwitcher
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="#1F1F1F" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="196dp"
        android:layout_height="195dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_profile"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <View
        android:id="@+id/back_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/edit_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_search_24"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/camera_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/camera2"
        android:elevation="5dp"
        tools:layout_editor_absoluteX="394dp"
        tools:layout_editor_absoluteY="92dp" />

    <View
        android:id="@+id/qr_code_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_qr_code_24"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/menu_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/baseline_more_vert_24"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_icon"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:backgroundTint="@color/white"
        android:text="1/55"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/edit_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/toolbar"
        layout="@layout/details_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>




</androidx.constraintlayout.motion.widget.MotionLayout>